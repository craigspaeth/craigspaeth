@require '../node_modules/nib/index.styl'
global-reset()

twitter-color = #46B9F1
github-color = #5791CA
linkedin-color = #006599
tumblr-color = #35506B
artsy-color = #6A00CC
border-color = rgba(255,255,255,0.4)
text-color = rgba(255,255,255,0.8)
margin = 30px
font-smoothing()
  vendor('font-smoothing', arguments)

body.mirror
  background-color black

.mirror-container
  width 100vw
  height 100vh
  position relative
  .mirror-img-container
    width 100%
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    text-align center
    img
      display inline-block
      max-width 100%
      max-height 100%
      max-height 80vh
  .mirror-caption
    color #aaa
    margin-top 30px
    font-family Baskerville, Georgia, serif
    font-size 21px
    display block
    text-align center
  .mirror-iframe-container
    position absolute
    top 50%
    left 50%
    width 768px
    height 432px
    transform translate(-50%, -50%)

.flickity-page-dots
  display none

.flickity-prev-next-button
  background transparent
  height 100vh
  padding 0 50px
  border-radius 0
  right 0
  opacity 0.5
  &:hover
    background transparent
