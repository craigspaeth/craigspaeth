@import nib
global-reset()

twitter-color = #46B9F1
github-color = #5791CA
linkedin-color = #006599
tumblr-color = #35506B
artsy-color = #6A00CC

body
  font-family Georgia
  line-height 1.4em
  background-color #222
  color white
  transition background-color 0.5s cubic-bezier(0.645, 0.045, 0.355, 1.000)
  &.twitter
    background-color twitter-color
  &.github
    background-color github-color
  &.linkedin
    background-color linkedin-color
  &.tumblr
    background-color tumblr-color
  &.artsy
    background-color artsy-color
h1
  margin 60px 0 40px 0
  text-align center
  font-size 50px
  font-weight normal
  text-transform uppercase
  letter-spacing 10px
h2
  text-align center
a
  color white
  text-decoration none
  border-bottom 1px solid
ul
  width 470px
  margin 40px auto
  li
    float left
    margin-right 82px
    &:last-child
      margin-right 0