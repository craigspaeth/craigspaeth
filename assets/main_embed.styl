@import nib
global-reset()

twitter-color = #46B9F1
github-color = #5791CA
linkedin-color = #006599
tumblr-color = #35506B
artsy-color = #6A00CC

font-smoothing()
  vendor('font-smoothing', arguments)

body
  background-color #151515
  color text-color
  font-family 'Open Sans', sans-serif
  font-size 15px
  line-height 1.4em
  transition background-color 0.5s cubic-bezier(0.645, 0.045, 0.355, 1.000)
  font-smoothing antialiased
  &.twitter
    background-color twitter-color
  &.github
    background-color github-color
  &.linkedin
    background-color linkedin-color
  &.tumblr
    background-color tumblr-color
  &.artsy
    background-color artsy-color
h1
  margin 30px 0
  text-align center
  font-size 28px
  font-weight 600
  text-transform uppercase
  letter-spacing 6px
  color white
h2
  text-align center
  color white
  a
    padding-bottom 1px
    padding-left 2px
    border-bottom 1px solid rgba(255,255,255,0.7)
a
  color white
  text-decoration none
  transition color 0.2s
ul
  margin 30px auto
  text-align center
  font-weight 700
  text-transform uppercase
  letter-spacing 3px
  font-size 11px
  a
    color rgba(255,255,255,0.8)
  li
    display inline-block
    padding 3px 15px
    margin-right 20px
    border 1px solid rgba(255,255,255,0.2)
    &:hover, &:active
      a
        color white
    &:last-child
      margin-right 0

#container
  top 50%
  position absolute
  margin-top -125px
  display block
  left 50%
  margin-left -282px